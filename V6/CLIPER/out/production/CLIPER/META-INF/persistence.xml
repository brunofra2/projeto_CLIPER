<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="aejn" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>bac.com.br.hibernate.entidade.Atividades</class>
    <class>bac.com.br.hibernate.entidade.Avaliacao</class>
    <class>bac.com.br.hibernate.entidade.Backup</class>
    <class>bac.com.br.hibernate.entidade.Colaborador</class>
    <class>bac.com.br.hibernate.entidade.Curso</class>
    <class>bac.com.br.hibernate.entidade.Descricao</class>
    <class>bac.com.br.hibernate.entidade.Documento</class>
    <class>bac.com.br.hibernate.entidade.Domicilio</class>
    <class>bac.com.br.hibernate.entidade.Empresa</class>
    <class>bac.com.br.hibernate.entidade.Funcao</class>
    <class>bac.com.br.hibernate.entidade.Historico</class>
    <class>bac.com.br.hibernate.entidade.ItemSeguranca</class>
    <class>bac.com.br.hibernate.entidade.Itens</class>
    <class>bac.com.br.hibernate.entidade.Lotacao</class>
    <class>bac.com.br.hibernate.entidade.Pasta</class>
    <class>bac.com.br.hibernate.entidade.Periodo</class>
    <class>bac.com.br.hibernate.entidade.Pgr</class>
    <class>bac.com.br.hibernate.entidade.Risco</class>
    <class>bac.com.br.hibernate.entidade.Setor</class>
    <class>bac.com.br.hibernate.entidade.TipoTreinamento</class>
    <class>bac.com.br.hibernate.entidade.Treinador</class>
    <class>bac.com.br.hibernate.entidade.Treinamento</class>
    <class>bac.com.br.hibernate.entidade.Usuario</class>
    <shared-cache-mode>DISABLE_SELECTIVE</shared-cache-mode>
    <properties>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/aejn"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="bruno"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
